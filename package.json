{
  "name": "hardhat-fhevm",
  "version": "0.2.0",
  "description": "Hardhat Fhevm plugin",
  "repository": "github:0xalexbel/hardhat-fhevm",
  "author": "Alexandre Belhoste",
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin"
  ],
  "scripts": {
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "eslint --fix \"**/*.{js,ts}\"",
    "mocha": "mocha --exit --recursive",
    "test": "mocha --exit --recursive 'test/**/*.ci.test.ts'",
    "test:local": "mocha --exit --recursive 'test/**/local-fhevm-*.test.ts'",
    "test:anvil": "mocha --exit --recursive 'test/**/anvil-*.test.ts'",
    "test:localhost": "mocha --exit --recursive 'test/**/localhost-*.test.ts'",
    "test:hh": "mocha --exit --recursive 'test/**/hardhat-*.ci.test.ts'",
    "format": "prettier --write \"**/*.{ts,js}\"",
    "build": "tsc",
    "watch": "tsc -w",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/src/",
    "dist/types*",
    "src/",
    "solidity/",
    "docker/",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "bigint-buffer": "^1.1.5",
    "cross-spawn": "^7.0.3",
    "dotenv": "^16.4.5",
    "extra-bigint": "^1.1.18",
    "fhevmjs": "0.5.2",
    "rimraf": "^4.1.2",
    "sha3": "^2.1.4",
    "sqlite3": "^5.1.7",
    "yaml": "^2.5.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@openzeppelin/contracts": "^5.0.2",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.1.7",
    "@types/cross-spawn": "^6.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.8",
    "@types/node": "^22.4.1",
    "chai": "^4.2.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "ethers": "^6.13.3",
    "fhevm": "0.5.8",
    "hardhat": "^2.22.12",
    "hardhat-ignore-warnings": "^0.2.11",
    "mocha": "^10.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "typechain": "^8.3.2"
  },
  "peerDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "ethers": "^6.13.3",
    "hardhat": "^2.22.12"
  }
}
